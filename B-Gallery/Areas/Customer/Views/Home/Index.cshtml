@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-3">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-2">
                            <p class="card-title h5 text-primary text-center">@product.Title</p>
                            <p class="card-title text-secondary">@product.Author</p>
                        </div>
                        <div class="pl-2">
                            <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                         <div class="pl-2">
                            <p>As Low as: <b>$@product.Price100.ToString("0.00")</b></p>
                        </div>
                        <a class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
