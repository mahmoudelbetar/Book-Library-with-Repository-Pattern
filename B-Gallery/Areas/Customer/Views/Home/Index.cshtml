@model IEnumerable<Product>

<div class="row pb-3">
    <span>Filter By Categoty: </span>
    <div class="dropdown">
      <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Category
      </button>
      <ul class="dropdown-menu">
         <li><a class="dropdown-item" asp-action="Filter" asp-route-category="All">All Categories</a></li>
        <li><a class="dropdown-item" asp-action="Filter" asp-route-category="CAT 1">Cat 1</a></li>
        <li><a class="dropdown-item" asp-action="Filter" asp-route-category="CAT 2">Cat 2</a></li>
        <li><a class="dropdown-item" asp-action="Filter" asp-route-category="CAT 3">Cat 3</a></li>
      </ul>
</div>
</div>
<div class="row pb-3">
    
    
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-3">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-2">
                            <p class="card-title h5 text-primary text-center">@product.Title</p>
                           
                        </div>
                        <div class="pl-2">
                            <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                         <div class="pl-2">
                            <p>As Low as: <b>$@product.Price100.ToString("0.00")</b></p>
                        </div>
                        <a class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-productId="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
